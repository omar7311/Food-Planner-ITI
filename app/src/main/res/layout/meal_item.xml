<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/randomMeal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@id/mealOfDay"
    app:cardElevation="@dimen/_16sdp"
    app:cardCornerRadius="@dimen/_16sdp"
    android:layout_margin="@dimen/_8sdp"
    android:padding="@dimen/_8sdp"
   app:rippleColor="@color/white">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/imageMeal"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_200sdp"
                android:scaleType="centerCrop"/>
            <TextView
                android:id="@+id/nameMeal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:padding="@dimen/_8sdp"
                android:textSize="@dimen/_18sdp"
                android:background="#80000000"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <CheckBox
                android:id="@+id/addToFav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/baseline_favorite_24"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginEnd="@dimen/_8sdp"
                app:layout_constraintBottom_toTopOf="@id/nameMeal"
                app:layout_constraintTop_toTopOf="@id/nameMeal"/>
            <CheckBox
                android:id="@+id/addToPlan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/baseline_calendar_month_24"
                app:layout_constraintRight_toLeftOf="@id/addToFav"
                android:layout_marginEnd="@dimen/_8sdp"
                app:layout_constraintBottom_toTopOf="@id/nameMeal"
                app:layout_constraintTop_toTopOf="@id/nameMeal"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>